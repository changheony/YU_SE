<?xml version="1.0" encoding="utf-8"?>
<!-- 로그인을 가장먼저 실행, 회원가입과 메인화면들도 저장. 여기서 모든화면엔 actionbar설정 해제-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nevi_menu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nevi_menu">
        <!--activity
            android:name=".Register"
            android:exported="true" /-->
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/Theme.Nevi_menu.NoActionBar">
            <intent-filter> <!-- start activity is login -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Register"
            android:exported="true"
            android:theme="@style/Theme.Nevi_menu.NoActionBar"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nevi_menu.NoActionBar"></activity>

    </application>

</manifest>
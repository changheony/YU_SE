<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_exercise_secne"
    tools:context=".ui.exercise.ExerciseScene">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exercise_secne_exercisename"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="운동 이름" />


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/exercise_secne_youtubeView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/exercise_secne_youtubeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#649dcf"
            android:text="영상 보기" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="설명 :" />

            <TextView
                android:id="@+id/exercise_secne_description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <RatingBar
            android:id="@+id/exercise_secne_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginLeft="75dp"
             />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="125dp"
            >

            <TextView
                android:id="@+id/exercise_secne_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="횟수 :"
                android:textStyle="bold"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/exercise_secne_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="10분"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            >
            <Button
                android:id="@+id/exercise_secne_complete_btn"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:backgroundTint="#649dcf"
                android:text="설정 완료"
                />

            <Button
                android:id="@+id/exercise_secne_cancel_btn"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="#649dcf"
                android:text="취소"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
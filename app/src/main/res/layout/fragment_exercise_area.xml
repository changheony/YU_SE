<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercise.ExerciseArea">

    <FrameLayout
        android:id="@+id/frame_exercise_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_chest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:text="가슴"
            android:textColor="#CC070707"
            android:textStyle="bold"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:text="등"
            android:textColor="#CC070707"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_shoulder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:text="어깨"
            android:textColor="#CC070707"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn_arm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:text="팔"
            android:textColor="#CC070707"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn_leg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:text="하체"
            android:textColor="#CC070707"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn_abs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:text="복근"
            android:textColor="#CC070707"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn_etc_exercise_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:layout_weight="1"
            android:text="기타운동 추가하기"
            android:textColor="#CC070707"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40sp"
            />

    </LinearLayout>

    </FrameLayout>

</RelativeLayout>